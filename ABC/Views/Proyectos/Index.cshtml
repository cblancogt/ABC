@model IEnumerable<ABC.Models.Proyecto>
@{
    ViewData["Title"] = "Proyectos";
    Layout = "~/Views/Shared/_Principal.cshtml";
}



<div id="app">
    <section class="section is-title-bar">
        <div class="level">
            <div class="level-left">
                <div class="level-item">
                    <ul>
                        <li>Admin</li>
                        <li>Proyectos</li>
                    </ul>
                </div>
            </div>

            <div class="level-right">
                <p class="level-item"><a>Avances</a></p>
                <p class="level-item"><a>Costos</a></p>
                <p class="level-item"><a asp-action="CrearProyecto" class="button is-success is-large">Crear Proyecto</a></p>
            </div>

        </div>
    </section>
    <section class="section is-main-section">
      <div class="card has-table has-mobile-sort-spaced">
            <header class="card-header">
                <p class="card-header-title">
                    <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
                    Lista de Proyectos
                </p>
                <a href="#" class="card-header-icon">
                    <span class="icon"><i class="mdi mdi-reload"></i></span>
                </a>
            </header>
            <div class="card-content">
                <div class="b-table has-pagination">
                    <div class="table-wrapper has-mobile-cards">
                        @if (Model.Count() > 0)
                        {
                            <table class="table is-fullwidth is-striped is-hoverable is-sortable is-fullwidth">
                                <thead>
                                    <tr>

                                        <th>@Html.DisplayNameFor(m => m.IdProyecto)</th>
                                        <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                        <th>@Html.DisplayNameFor(m => m.FechaInicio)</th>
                                        <th>@Html.DisplayNameFor(m => m.FechaFin)</th>
                                        <th>@Html.DisplayNameFor(m => m.IdUsuario)</th>
                                        <th>Avance</th>
                                        <th>Revision</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td data-label="Id ">@item.IdProyecto</td>
                                            <td data-label="Nombre">@item.Nombre</td>
                                            <td data-label="Fecha Inicio">@item.FechaInicio</td>
                                            <td data-label="Fecha Fin">@item.FechaFin</td>
                                            <td data-label="Creador">@item.IdUsuario</td>
                                            <td data-label="Avance" class="is-progress-cell">
                                                <progress max="100" class="progress is-small is-primary" value="79">79</progress>
                                            </td>

                                            <td class="is-actions-cell">
                                                <div class="buttons is-right">
                                                    <button class="button is-small is-primary" type="button">
                                                        <span class="icon"><i class="mdi mdi-eye"></i></span>
                                                    </button>
                                                    <button class="button is-small is-danger jb-modal" data-target="aviso" type="button">
                                                        <span class="icon"><i class="mdi mdi-trash-can"></i></span>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>


                                    }
                                </tbody>
                            </table>
                        }
                        else { }
                    </div>
                    <div class="notification">
                        <div class="level">
                            <div class="level-left">
                                <div class="level-item">
                                    <div class="buttons has-addons">
                                        <button type="button" class="button is-active">1</button>
                                        <button type="button" class="button">2</button>
                                        <button type="button" class="button">3</button>
                                    </div>
                                </div>
                            </div>
                            <div class="level-right">
                                <div class="level-item">
                                    <small>Page 1 of 3</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div id="aviso" class="modal">
        <div class="modal-background jb-modal-close"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Confirmar Accion</p>
                <button class="delete jb-modal-close" aria-label="close"></button>
            </header>
            <section class="modal-card-body">
                <p>Esto borrara de forma <b>permantente</b></p>
                <p>This is sample modal</p>
            </section>
            <footer class="modal-card-foot">
                <button class="button jb-modal-close">Cancelar</button>
                <button class="button is-danger jb-modal-close">Eliminar</button>
            </footer>
        </div>
        <button class="modal-close is-large jb-modal-close" aria-label="close"></button>
    </div>

</div>