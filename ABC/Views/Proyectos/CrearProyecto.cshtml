@model ABC.Models.Proyecto
@{
    ViewData["Title"] = "Crear Proyecto";
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<div id="app">
    <section class="section is-title-bar">
        <div class="level">
            <div class="level-left">
                <div class="level-item">
                    <ul>
                        <li>Admin</li>
                        <li>Crear proyecto</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section class="section is-main-section">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    <span class="icon"><i class="mdi mdi-ballot"></i></span>
                    Datos del Proyecto
                </p>
            </header>
            <div class="card-content">
                <form method="post" asp-action="CrearProyecto">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Nombre:</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="help is-danger">
                                    <span asp-validation-for="Nombre"></span>
                                </p>
                                <div class="control">
                                    <input asp-for="Nombre" class="input is-danger" type="text" placeholder="Escribir el nombre del proyecto">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Descripcion:</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <textarea asp-for="Descripcion" class="textarea" placeholder="Escriba la descripcion del proyecto"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label"></label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <label class="label">Fecha Inicio:</label>
                                <p class="control is-expanded has-icons-left">
                                    <input asp-for="FechaInicio" class="input" type="date" placeholder="Fecha Inicio">
                                    <span class="icon is-small is-left"><i class="mdi mdi-calendar"></i></span>
                                </p>
                            </div>
                            <div class="field">
                                <label class="label">Fecha Fin:</label>
                                <p class="control is-expanded has-icons-left">
                                    <input asp-for="FechaFin" class="input is-success" type="date" placeholder="Fecha Fin" value="">
                                    <span class="icon is-small is-left"><i class="mdi mdi-calendar"></i></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label"></label>
                        </div>
                        <div class="field-body ">
                            <div class="field">
                                <div class="columns">
                                    <div class="column is-half"></div>
                                    <div class="column"><button class="button is-primary is-fullwidth">Crear proyecto</button></div>
                                    <input asp-for="IdUsuario" value="1" hidden="" />
                                    <input asp-for="IdEstado" value="1" hidden="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>           
                </form>
            </div>
        </div>     
    </section>

</div>

